#!/bin/bash

set -e

CURRENT_TIMESTAMP=$(python -c 'import time; print int(round(time.time() * 1000))')

LOG_GROUP_NAME="{{ project }}-{{ env }}-lamp"
LOG_STREAM_NAME="{{ project }}-{{ env }}-lamp-$CURRENT_TIMESTAMP"

export AWS_DEFAULT_REGION="us-east-1"

/usr/local/bin/aws logs create-log-stream --log-group-name "$LOG_GROUP_NAME" --log-stream-name "$LOG_STREAM_NAME"

{
  sudo /usr/local/bin/aws s3 sync --storage-class STANDARD_IA /home/ubuntu/backups s3://{{ project }}-{{ env }}-lamp/home/ubuntu/backups/
} || {
  /usr/local/bin/aws logs put-log-events --log-group-name "$LOG_GROUP_NAME" --log-stream-name "$LOG_STREAM_NAME" --log-events "timestamp=$CURRENT_TIMESTAMP,message=ERROR\tFailed to backup /home/ubuntu/backups."
  exit 1
}

/usr/local/bin/aws logs put-log-events --log-group-name "$LOG_GROUP_NAME" --log-stream-name "$LOG_STREAM_NAME" --log-events "timestamp=$CURRENT_TIMESTAMP,message=SUCCESS\tSuccessfully backed up /home/ubuntu/backups."

exit 0
