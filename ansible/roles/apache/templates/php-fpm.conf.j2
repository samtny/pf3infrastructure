<IfModule mod_php.c>
  Alias /php-fcgi /usr/lib/cgi-bin/php7.2-fcgi
  AddHandler php .php
  Action php /php-fcgi
  FastCgiExternalServer /usr/lib/cgi-bin/php7.2-fcgi -socket /var/run/php7.2-fpm.sock -pass-header Authorization -idle-timeout 300
  <Directory /usr/lib/cgi-bin>
    AllowOverride All
    Options +ExecCGI +FollowSymLinks
    Require all granted
  </Directory>
</IfModule>
